<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Kirjautuminen</servlet-name>
        <servlet-class>Servlets.Kirjautuminen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>YhteysTesti</servlet-name>
        <servlet-class>Servlets.YhteysTesti</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListausServlet</servlet-name>
        <servlet-class>Servlets.ListausServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Kirjautuminen</servlet-name>
        <url-pattern>/Kirjautuminen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>YhteysTesti</servlet-name>
        <url-pattern>/YhteysTesti</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListausServlet</servlet-name>
        <url-pattern>/Etusivu</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
